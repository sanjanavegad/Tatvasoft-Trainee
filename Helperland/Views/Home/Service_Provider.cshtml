@using Helperland.Models
@model User


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
    <title>Service Provider - SignUp</title>
</head>

<body>
    <section style="background-image: url(../images/become-a-pro-banner.png); background-repeat: no-repeat; padding: 15px;">
        <div class="wrapper" id="navbar-provider">
            <nav id="sidebar">
                <div class="container-fluid">
                    <div class="row row1">
                        <strong>Welcome, Sandeep.</strong>
                    </div>

                    <div class="row row2 ">
                        <ul class="nav nav-tabs flex-column">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Service History</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Service Schedule</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Favorite Pros</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">My Settings</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Logout</a>
                            </li>

                        </ul>
                    </div>
                    <div class="row row3">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link login-trigger btn" href="#">Login</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Book_Now" class="nav-link">Book a Cleaner</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link">Price & services</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="About" class="nav-link">Warranty</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="PublicPages" asp-action="Contact" class="nav-link">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Service_provider" class="nav-link">
                                    Become a Helper
                                </a>
                            </li>
                        </ul>

                    </div>
                    <hr>
                    <div class="row4">
                        <img class="socialmedia" src="../images/ic-facebook.png" alt="" style="margin-right: 40px; ">
                        <img class="socialmedia" src="../images/ic-instagram.png" alt="">
                    </div>
                </div>

            </nav>
            <div id="nevbar">
                <section class="small-nav p-3">
                    <nav class="navbar navbar-expand-lg navbar-dark mynav" style="background:transparent">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="../images/logo-large.png" alt="Helperland"></a>
                        <button class="navbar-toggler" id="sidebarCollapse" type="button">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Book_Now" class="nav-link btn btn-primary text-white" style="padding-left: 15px;padding-right: 15px;">
                                        Book a Cleaner
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link text-white">Prices</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link text-white">Our Guarantee</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link text-white">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="PublicPages" asp-action="Contact" class="nav-link text-white">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="PublicPages" asp-action="Prices" class="nav-link btn btn-primary text-white"
                                       style="padding-left: 20px;padding-right: 20px; margin-bottom: 4px;">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Sevice_Provider" class="nav-link btn btn-primary text-white"
                                       style="padding-left: 15px;padding-right: 15px;">
                                        Become a Helper
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </section>
            </div>

            <div class="overlay"></div>

        </div>

        <div class="col-md-5 register-form-area" style="margin-bottom: 50px; margin-top: 100px;">
            <div class="form-area d-block">
                <form asp-controller="Home" asp-action="Service_Provider" method="post" role="form">
                    <br style="clear:both">
                    <h3 style="margin-bottom: 25px; text-align: center; color: #4F4F4F;">Register Now!</h3>
                    <div class="text-danger mb-3 text-center">
                        @ViewBag.Message
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                        <input asp-for="FirstName" class="form-control" id="inputfirstname" placeholder="First Name">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                        <input asp-for="LastName" class="form-control" id="inputlastname" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <input asp-for="Email" class="form-control" id="inputemail" placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Mobile" class="text-danger small"></span>
                        <input asp-for="Mobile" class="form-control" id="inputnumber" placeholder="Phone number">
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="Password" class="form-control" id="inputpassword" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="Password" class="form-control" id="inputconfirmpassword" placeholder="Conform Password">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="send_me" value="1" style="margin-right: 7px;" tabindex="3" required />Send me newsletters from Helperland
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="Conditions" value="1" style="margin-right: 7px;" tabindex="3" required />I accept <a href="" style="color: #1FB6FF;">terms and condition</a>& <a href="" style="color: #1FB6FF;">privacy policy</a>
                    </div>
                    <!-- <div class="form-group ">
        <div class="g-recaptcha d-block" data-sitekey="6Ldbdg0TAAAAAI7KAf72Q6uagbWzWecTeBWmrCpJ" style="margin-top:15px"></div>
    </div> -->
                    <button type="submit" class="btn btn-blue">Get Started <img src="../images/arrow-white.png" alt=""></button>
                </form>
            </div>
        </div>
        <div class="row ">
            <div id="main-btn-down">
                <a href="#howitwork">
                    <img class="" src="../images/group-18_5.png" alt="">
                </a>
            </div>
        </div>
    </section>

    <section id="howitwork">
        <div class="container">
            <img id="blog-left" src="../images/blog-left-bg.png" alt="" srcset="">
            <img id="blog-right" src="../images/blog-right-bg.png" alt="" srcset="">
            <h2 class="h2">How it works</h2>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-lg-offset-2 col-md-12 col-md-offset-1">
                    <ul class="how-it-work-ul">
                        <li class="d11" data-sequence="200">
                            <img alt="Register yourself" class="main-img1 animated fadeInUp go" data-id="1"
                                 src="../images/work1.png">
                            <div class="content-outer animated fadeInUp go" data-id="2">
                                <h3 class="h3">Register yourself</h3>
                                <p class="list-text">
                                    Provide your basic information to register
                                    yourself as a service provider.
                                </p>
                                <p class="list-text">Read more <img src="../images/shape-2.png" alt=""></p>
                            </div>
                        </li>
                        <li data-sequence="200" style="margin-top: 150px;">
                            <img alt="Register yourself" class="main-img2 animated fadeInUp go" data-id="1"
                                 src="../images/work2.png">
                            <div class="content-outer animated fadeInUp go" data-id="2">
                                <h3 class="h3">Get service requests</h3>
                                <p class="list-text2">
                                    You will get service requests from
                                    customes depend on service area and profile.
                                </p>
                                <p class="list-text2">Read more <img src="../images/shape-2.png" alt=""></p>
                            </div>
                        </li>

                        <li data-sequence="200" style="margin-top: 150px;">
                            <img alt="Register yourself" class="main-img1 animated fadeInUp go" data-id="1"
                                 src="../images/work3.png">
                            <div class="content-outer animated fadeInUp go" data-id="2">
                                <h3 class="h3">Complete service</h3>
                                <p class="list-text">
                                    Accept service requests from your customers
                                    and complete your work.
                                </p>
                                <p class="list-text">Read more <img src="../images/shape-2.png" alt=""></p>
                            </div>
                        </li>


                    </ul>
                </div>
            </div>
        </div>
    </section>


    <!-- customer section -->
    <section class="container-fluid" id="customer" style="background-color: white;">
        <div class="row justify-content-center" id="row3">
            <div class="col-md-12 col-sm-8 order-1 order-sm-2">
                <div class="container-fluid mx-0 px-0">
                    <div class="row mx-0 px-0 text-center ">
                        <p class="title mb-1">GET OUR NEWSLETTER</p>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-sm-auto p-0 newletter-input">
                            <input class="form-control" type="email" name="" id="" placeholder="YOUR EMAIL">
                        </div>
                        <div class="col-sm-1 py-2 py-sm-0 newletter-input">
                            <button class="btn" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer section -->
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a asp-area="" asp-controller="Home" asp-action="Index" title="Helper Hand">
                            <img src="../images/footer-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" title="Home">Home</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="PublicPages" asp-action="About" title="About">About</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="PublicPages" asp-action="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="PublicPages" asp-action="FAQ" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="PublicPages" asp-action="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="PublicPages" asp-action="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="../images/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="../images/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr>
                <div class="justify-content-lg-center text-center" style="font-size: 16px;">
                    <div>
                        ©2018 Helperland. All rights reserved. &nbsp;&nbsp;&nbsp;&nbsp; <a href=""
                                                                                           class="row-bottom">
                            Terms
                            and Conditions
                        </a> | <a href="" class="row-bottom">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

